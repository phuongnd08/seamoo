<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<!--ELFunctor for convenient using of bean method-->
	<listener>
		<listener-class>beanface.el.functor.InstallFunctorListener</listener-class>
	</listener>
    <!---->
	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>org.seamoo.server.GreetingServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ViewGuestBook</servlet-name>
		<servlet-class>org.seamoo.server.ViewGuestBook</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/seamoo_2/greet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ViewGuestBook</servlet-name>
		<url-pattern>/viewGuestBook</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>viewGuestBook</welcome-file>
	</welcome-file-list>

</web-app>
